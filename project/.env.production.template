# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_HOST=mysql_host
DATABASE_PORT=3306
DATABASE_NAME=itm8_attendance
DATABASE_USER=attendance_user
DATABASE_PASSWORD=change_this_password

# Redis (for session management)
REDIS_HOST=itm8_attendance_redis
REDIS_PORT=6379

# JWT Security (generate a strong random string for production!)
JWT_SECRET_KEY=change-this-to-a-secure-random-string-at-least-32-chars
JWT_ACCESS_EXPIRY=600
JWT_REFRESH_EXPIRY=3600

# SMTP Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_NAME=ITSD Attendance
SMTP_FROM_EMAIL=your-email@gmail.com

# Admin Account (for initial setup)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-this-password

# CORS (comma-separated origins - set to your production domain)
CORS_ORIGINS=https://your-domain.com

# Cookie Settings (keep these values for production security)
COOKIE_SECURE=True
COOKIE_SAMESITE=strict

# Timezone
TIMEZONE=Asia/Manila

VITE_API_URL=
